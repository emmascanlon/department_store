<h1><%= @item.id ? 'Edit Item' : 'Create Item' %></h1>
<hr />
<%= form_for [@department, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :brand %>
  <%= f.text_field :brand %>
  <br />
  <%=f.label :price %>
  <%=f.number_field :price %>
  <br />
  <%=f.label :description %>
  <%=f.text_area :description %>
  <br />
  <%= f.submit %>
<% end %>

